@model IEnumerable<Pharmacy_medicine_supply_Portal.Models.RepSchedule>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctorname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeetingSlot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dateofmeeting)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorContactnumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TreatingAlignment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medicine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctorname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingSlot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dateofmeeting)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoctorContactnumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TreatingAlignment)
            </td>
            <td>
               @foreach(string str in item.Medicine)
               {
                   <span>@str</span>
               }
           
        </tr>
}
    </tbody>
</table>
